<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type Border}" x:Key="ToggleBorder">
        <Setter Property="Background" Value="#8B2B2B"/>
        <Setter Property="BorderBrush" Value="#EEEEEE"/>
        <Setter Property="BorderThickness" Value="0.8"/>
        <Setter Property="CornerRadius" Value="9"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Width" Value="62"/>
    </Style>
    <Style TargetType="{x:Type ToggleButton}" x:Key="Toggle">
        <Setter Property="Height" Value="35"/>
        <Setter Property="Width" Value="65"/>
        <Setter Property="MaxHeight" Value="35"/>
        <Setter Property="MaxWidth" Value="65"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Grid>

                        <!-- Background Color -->
                        <Border Style="{StaticResource ToggleBorder}"
                            x:Name="Border"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>

                        <!-- Knop Color -->
                        <Ellipse x:Name="Ellipse"
                             Height="35"
                             Width="35"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center"
                             Fill="#222831"
                             Stroke="#EEEEEE"
                             StrokeThickness="1">
                            <Ellipse.Effect>
                                <!-- Knop Shadow, I like Shadows Tooltips when? -->
                                <DropShadowEffect Color="#CC272538" BlurRadius="4" ShadowDepth="2" Opacity="0.5"/>
                            </Ellipse.Effect>
                        </Ellipse>

                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- Enabled Background -->
                        <EventTrigger RoutedEvent="Checked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" To="#2B8B4E" Duration="0:0:0.3"/>
                                    <ThicknessAnimation Storyboard.TargetName="Ellipse" Storyboard.TargetProperty="Margin" To="30 0 0 0" Duration="0:0:0.2"/>

                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <!-- Disabled Background -->
                        <EventTrigger RoutedEvent="Unchecked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="Border"  Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" To="#8B2B2B" Duration="0:0:0.3"/>
                                    <ThicknessAnimation Storyboard.TargetName="Ellipse"  Storyboard.TargetProperty="Margin" To="0 0 0 0" Duration="0:0:0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <!-- Knop Color Other Side -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Ellipse" Property="Fill" Value="#393E46"/>
                            <Setter TargetName="Ellipse"  Property="Stroke"  Value="#EEEEEE"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
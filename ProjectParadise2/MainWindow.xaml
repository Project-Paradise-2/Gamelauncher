<Window x:Class="ProjectParadise2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:ProjectParadise2"
        xmlns:langs="clr-namespace:ProjectParadise2.Properties"
        xmlns:objs="clr-namespace:ProjectParadise2.Objects"
        xmlns:viewModel="clr-namespace:ProjectParadise2.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        MouseMove="Window_MouseMove"
        MouseUp="Window_MouseUp"
        Background="Transparent">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Border Background="#222831" CornerRadius="30" BorderThickness="2" BorderBrush="#393E46">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="209"/>
                <ColumnDefinition Width="1058"/>
                <ColumnDefinition Width="1"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="55"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="- Project Paradise 2 -" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="Black" FontSize="30" Height="60" Grid.Column="1" Width="350" Margin="288,0,0,0" FontFamily="/Fonts/#Angelos-Personal use"/>
            <TextBlock Text="- Project Paradise 2 -" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#EEEEEE" FontSize="30" Height="60" Grid.Column="1" Width="350" Margin="286,0,0,0" FontFamily="/Fonts/#Angelos-Personal use" Grid.RowSpan="2"/>

            <fa:ImageAwesome Icon="Empire" Spin="True" SpinDuration="1.2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Height="30" Width="30" x:Name="Working" Foreground="#b4a5a5" Margin="1031,0,0,0" Grid.ColumnSpan="2"/>

            <!-- Discord Gimmick -->
            <Image Source="/Images/PP2Logo.png" Margin="22,10,142,188" Stretch="UniformToFill" Name="UserAvatar" Grid.RowSpan="2">
                <Image.OpacityMask>
                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.6" RadiusY="0.6">
                        <GradientStop Color="#ffffffff" Offset="0.3" />
                        <GradientStop Color="#00ffffff" Offset="0.8" />
                    </RadialGradientBrush>
                </Image.OpacityMask>
            </Image>
            <TextBlock Text="Hello" FontSize="14" Foreground="#B4A5A5" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Name="Playername" FontFamily="/Fonts/#Protofo" Margin="68,23,0,0" Height="19" Width="338" Grid.ColumnSpan="2"/>


            <!-- Launcher Main Buttons -->
            <StackPanel Grid.Row="1" Margin="0,65,0,0" Grid.RowSpan="2">

                <Image Source="/Images/PP2Logo.png" Margin="0,-60,0,0" Stretch="UniformToFill" Height="200" Width="200"/>

                <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="2,50,0,0" Content="HOME" x:Name="Home" Height="40" Width="200" TextMargin="35,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="True" Icon="Home" IconDirection="Center" IconMargin="-163,0,0,0" IconColor="#EEEEEE" Command="{Binding HomeViewCommand}"/>

                <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="2,10,0,0" Content="SERVICE" x:Name="Service" Height="40" Width="200" TextMargin="35,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="Wrench" IconDirection="Center" IconMargin="-163,0,0,0" IconColor="#EEEEEE" Command="{Binding ServiceViewCommand}"/>

                <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="2,10,0,0" Content="DISCOVERY" x:Name="Discovery" Height="40" Width="200" TextMargin="35,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="Archive" IconDirection="Center" IconMargin="-163,0,0,0" IconColor="#EEEEEE" Command="{Binding ModViewCommand}"/>

                <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="2,10,0,0" Content="SETTINGS" x:Name="Settings" Height="40" Width="200" TextMargin="35,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="Gear" IconDirection="Center" IconMargin="-163,0,0,0" IconColor="#EEEEEE" Command="{Binding SettingsViewCommand}"/>

                <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="2,10,0,0" Content="INFO" x:Name="Info" Height="40" Width="200" TextMargin="35,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="Info" IconDirection="Center" IconMargin="-163,0,0,0" IconColor="#EEEEEE" Command="{Binding InfoViewCommand}"/>

                <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="2,92,0,0" Content="EXIT" x:Name="Exit" Height="40" Width="200" TextMargin="35,0,0,0" Foreground="#FFD369" FontSize="15" IsChecked="False" Icon="PowerOff" IconDirection="Center" IconMargin="-163,0,0,0" IconColor="#FFD369" Click="OnCloseLauncher"/>

            </StackPanel>

            <ContentControl Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Margin="10,10,9,15" Content="{Binding CurrentView}"/>

        </Grid>
    </Border>
</Window>

<UserControl x:Class="ProjectParadise2.Views.CreateProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectParadise2.Views"
             xmlns:objs="clr-namespace:ProjectParadise2.Objects"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1020">
    <Border BorderThickness="0.8" CornerRadius="15" Background="#20232B" BorderBrush="#393E46" Margin="20,20,20,20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Create new Game Instance" Foreground="#B8B8B8" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="4" FontFamily="/Fonts/#Protofo" Width="720" Name="CreateEdit"/>
            <TextBlock Text="Profile Name" FontSize="20" Foreground="#B4A5A5" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Name="ProfileName" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="4" Width="871" Margin="20,0,0,0" Height="29"/>
            <TextBox Width="250" Height="40" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="1" Name="Profilename" Style="{StaticResource Input}" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="3" Margin="120,0,0,0" TextChanged="ProfileNameUpdate"/>
            <TextBlock Text="Start Args:" FontSize="20" Foreground="#B4A5A5" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Name="ArgumentText" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="4" Width="871" Margin="20,0,0,0" Height="29"/>
            <TextBox Width="250" Height="40" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="2" Name="Arguments" Style="{StaticResource Input}" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="3" Margin="120,0,0,0" TextChanged="StartArgsUpdate"/>
            <TextBlock Text="Magic Ram:" Foreground="#B8B8B8" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" FontFamily="/Fonts/#Protofo" Margin="20,0,0,0" Grid.ColumnSpan="4" Height="26" Width="190" Name="MagicRamText"/>
            <CheckBox Style="{StaticResource Toggle}" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="MagicRam" Grid.Row="3" Grid.Column="1"  Height="36" Width="75" Click="OnRamEdit"/>
            <TextBlock Text="Magic Cores:" Foreground="#B8B8B8" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="4"  FontFamily="/Fonts/#Protofo" Margin="20,0,0,0" Grid.ColumnSpan="4" Height="26" Width="190" Name="MagicCoresText"/>
            <CheckBox Style="{StaticResource Toggle}" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="Cores" Grid.Row="4" Grid.Column="1"  Height="36" Width="75" Click="MagicCoresUpdate" />
            <TextBlock Text="Magic Prio:" Foreground="#B8B8B8" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="5"  FontFamily="/Fonts/#Protofo" Margin="20,0,0,0" Grid.ColumnSpan="4" Height="26" Width="190" Name="MagicPrioText"/>
            <CheckBox Style="{StaticResource Toggle}" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="Priority" Grid.Row="5" Grid.Column="1"  Height="36" Width="75" Click="MagicPrioUpdate" />
            <TextBlock Text="Vehicle Dirt:" Foreground="#B8B8B8" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="6" Grid.Column="0" FontFamily="/Fonts/#Protofo" Margin="20,0,0,0" Grid.ColumnSpan="4" Height="26" Width="190" Name="DirtText"/>
            <CheckBox Style="{StaticResource Toggle}" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="DirtEnabled" Grid.Row="6" Grid.Column="1"  Height="36" Width="80" Click="VehicleDirtUpdate"/>
            <TextBlock Text="Vehicle Damage:" Foreground="#B8B8B8" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="7" Grid.Column="0" FontFamily="/Fonts/#Protofo" Margin="20,0,0,0" Grid.ColumnSpan="4" Height="26" Width="190" Name="DamageText"/>
            <CheckBox Style="{StaticResource Toggle}" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="DamageEnabled" Grid.Row="7" Grid.Column="1"  Height="36" Width="80" Click="VehicleDamageUpdate"/>
            <TextBlock Text="Online Mode:" Foreground="#B8B8B8" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="8" Grid.Column="0" FontFamily="/Fonts/#Protofo" Margin="20,0,0,0" Grid.ColumnSpan="4" Height="26" Width="190" Name="OnlineText"/>
            <CheckBox Style="{StaticResource Toggle}" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="OnlineEnabled" Grid.Row="8" Grid.Column="1"  Height="36" Width="80" Click="OnlineBuildUpdate"/>
            <objs:FA_BTN Style="{StaticResource FA_BTN}" x:Name="GameSelect"  Margin="15,10,15,10" Content="Select Game" TextMargin="10,0,0,0" Foreground="#B8B8B8" FontSize="15" IsChecked="False" Icon="ExternalLink" IconDirection="Right" IconMargin="0,0,12,00" IconColor="#EEEEEE" Grid.Row="1" Grid.Column="2" Height="40" Click="OnSelectGame"/>
            <objs:FA_BTN Style="{StaticResource FA_BTN}" x:Name="OpenGame"  Margin="15,10,15,10" Content="Open Game" TextMargin="10,0,0,0" Foreground="#B8B8B8" FontSize="15" IsChecked="False" Icon="FolderOpen" IconDirection="Right" IconMargin="0,0,12,00" IconColor="#EEEEEE" Grid.Row="1" Grid.Column="3" Height="40" Click="OnOpenGamefolder"/>
            <objs:FA_BTN Style="{StaticResource FA_BTN}" x:Name="GameUpdate" Margin="15,10,15,10" Content="Game Update" TextMargin="10,0,0,0" Foreground="#B8B8B8" FontSize="15" IsChecked="False" Icon="Check" IconDirection="Right" IconMargin="0,0,12,00" IconColor="#EEEEEE" Grid.Row="2" Grid.Column="3" Height="40" Click="OnGameUpdate"/>
            <objs:FA_BTN Style="{StaticResource FA_BTN}" x:Name="SetConnection" Margin="15,10,15,10" Content="Set Connection" TextMargin="10,0,0,0" Foreground="#B8B8B8" FontSize="15" IsChecked="False" Icon="Link" IconDirection="Right" IconMargin="0,0,12,00" IconColor="#EEEEEE" Grid.Row="1" Grid.Column="4" Height="40" Click="OnSetConnection" />
            <objs:FA_BTN Style="{StaticResource FA_BTN}" x:Name="ModBrowser" Margin="15,10,15,10" Content="Mod Browser" TextMargin="10,0,0,0" Foreground="#B8B8B8" FontSize="15" IsChecked="False" Icon="Flask" IconDirection="Right" IconMargin="0,0,12,00" IconColor="#EEEEEE" Grid.Row="2" Grid.Column="2" Height="40" Command="{Binding ModViewCommand}" Click="OpenMods" />
            <objs:FA_BTN Style="{StaticResource FA_BTN}" x:Name="Save" Margin="15,10,15,10" Content="Save" TextMargin="10,0,0,0" Foreground="#B8B8B8" FontSize="15" IsChecked="False" Icon="Save" IconDirection="Right" IconMargin="0,0,12,00" IconColor="#EEEEEE" Grid.Row="9" Grid.Column="4" Height="40" Click="SaveProfile"/>
            <!-- Game Exe Infos, and Filepath-->
            <TextBlock Text="" Foreground="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Grid.Column="2" FontFamily="/Fonts/#Protofo" Margin="20,-20,0,0" Grid.ColumnSpan="3" Height="26" Width="600" Name="ProductVersion"/>
            <TextBlock Text="" Foreground="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Grid.Column="2" FontFamily="/Fonts/#Protofo" Margin="20,25,0,0" Grid.ColumnSpan="3" Height="26" Width="600" Name="FileVersion"/>
            <TextBlock Text="" Foreground="White" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="4" Grid.Column="2" FontFamily="/Fonts/#Protofo" Margin="20,-50,0,0" Grid.ColumnSpan="3" Height="26" Width="600" Name="Gamedir"/>
            <!-- Game Type:TDU/TDU2 Steam/Non-Steam and Packed or Unpacked-->
            <TextBlock Text="" Foreground="#B8B8B8" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="4" Grid.Column="2" FontFamily="/Fonts/#Protofo" Margin="20,0,0,0" Grid.ColumnSpan="3" Height="26" Width="600" Name="GameSize"/>
            <TextBlock Text="" Foreground="#B8B8B8" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="5" Grid.Column="2" FontFamily="/Fonts/#Protofo" Margin="20,0,0,0" Grid.ColumnSpan="3" Height="26" Width="600" Name="GameType"/>
        </Grid>
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>
    </Border>
</UserControl>

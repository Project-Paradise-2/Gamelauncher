<UserControl x:Class="ProjectParadise2.Views.InfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:objs="clr-namespace:ProjectParadise2.Objects"
             xmlns:local="clr-namespace:ProjectParadise2.Views"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">
    <Border Margin="5,10,0,0" BorderThickness="0.8" CornerRadius="20" Background="#20232B">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="175"/>
                <ColumnDefinition Width="252"/>
                <ColumnDefinition Width="373"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="6">
                <TextBlock Text="Software Infos" FontSize="18" Foreground="#F1F1F1" Margin="20,5,0,0" FontFamily="/Fonts/#Protofo"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="394"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Version:" FontSize="14" Foreground="#B8B8B8" Margin="10,5,0,0" FontFamily="/Fonts/#Protofo" Grid.Column="1" Grid.Row="0"/>
                    <TextBlock Text="Build:" FontSize="14" Foreground="#B8B8B8" Margin="10,5,0,0" FontFamily="/Fonts/#Protofo" Grid.Column="1" Grid.Row="1"/>
                    <TextBlock Text="DirectX (9.0c)" FontSize="14" Foreground="#B8B8B8" Margin="10,5,0,0" FontFamily="/Fonts/#Protofo" Grid.Column="1" Grid.Row="2"/>
                    <TextBlock Text="C++ Runtime" FontSize="14" Foreground="#B8B8B8" Margin="10,5,0,0" FontFamily="/Fonts/#Protofo" Grid.Column="1" Grid.Row="3"/>
                    <TextBlock Text="2.10" FontSize="14" Foreground="#7A7A7A" Margin="0,5,86,0" FontStyle="Italic" Name="Launcherversion" FontFamily="/Fonts/#Protofo" Grid.Column="2" Grid.Row="0"/>
                    <TextBlock Text="24.12.2024 18:59:00" FontSize="14" Foreground="#7A7A7A" Margin="0,5,86,0" FontStyle="Italic" Name="Launcherbuild" FontFamily="/Fonts/#Protofo" Grid.Column="2" Grid.Row="1"/>
                    <TextBlock Text="DirectX (9.0c)" FontSize="14" Foreground="#7A7A7A" Margin="0,5,86,0" FontStyle="Italic" Name="DirectXText" FontFamily="/Fonts/#Protofo" Grid.Column="2" Grid.Row="2"/>
                    <TextBlock Text="C++ Runtime" FontSize="14" Foreground="#7A7A7A" Margin="0,5,86,0" FontStyle="Italic" Name="CPlusText" FontFamily="/Fonts/#Protofo" Grid.Column="2" Grid.Row="3" Grid.RowSpan="4"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="4" Grid.RowSpan="6">
                <TextBlock Text="Hardware Infos" FontSize="18" Foreground="#F1F1F1" Margin="20,5,0,0" FontFamily="/Fonts/#Protofo"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="77"/>
                        <ColumnDefinition Width="550"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="CPU:" FontSize="14" Foreground="#B8B8B8" Margin="10,5,0,0" FontFamily="/Fonts/#Protofo" Grid.Column="1" Grid.Row="0"/>
                    <TextBlock Text="Ram:" FontSize="14" Foreground="#B8B8B8" Margin="10,5,0,0" FontFamily="/Fonts/#Protofo" Grid.Column="1" Grid.Row="3"/>
                    <TextBlock Text="GPU:" FontSize="14" Foreground="#B8B8B8" Margin="10,5,0,0" FontFamily="/Fonts/#Protofo" Grid.Column="1" Grid.Row="4"/>
                    <TextBlock Text="Displays:" FontSize="14" Foreground="#B8B8B8" Margin="10,5,0,0" FontFamily="/Fonts/#Protofo" Grid.Column="1" Grid.Row="7"/>
                    <TextBlock Text="Network:" FontSize="14" Foreground="#B8B8B8" Margin="10,5,0,0" FontFamily="/Fonts/#Protofo" Grid.Column="1" Grid.Row="10"/>
                    <TextBlock Text="Loading.." FontSize="14" Foreground="#7A7A7A" Margin="0,5,0,0" FontStyle="Italic" Name="CPU" FontFamily="/Fonts/#Protofo" Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" HorizontalAlignment="Left" Width="550"/>
                    <TextBlock Text="Loading.." FontSize="14" Foreground="#7A7A7A" Margin="0,5,86,0" FontStyle="Italic" Name="RAM" FontFamily="/Fonts/#Protofo" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Left" Width="550"/>
                    <TextBlock Text="Loading.." FontSize="14" Foreground="#7A7A7A" Margin="0,5,86,0" FontStyle="Italic" Name="GPU" FontFamily="/Fonts/#Protofo" Grid.Column="2" Grid.Row="4" Grid.RowSpan="3" HorizontalAlignment="Left" Width="550"/>
                    <TextBlock Text="Loading.." FontSize="14" Foreground="#7A7A7A" Margin="0,5,86,0" FontStyle="Italic" Name="Displays" FontFamily="/Fonts/#Protofo" Grid.Column="2" Grid.Row="7" Grid.RowSpan="3" HorizontalAlignment="Left" Width="550"/>
                    <TextBlock Text="Loading.." FontSize="14" Foreground="#7A7A7A" Margin="0,5,86,0" FontStyle="Italic" Name="Network" FontFamily="/Fonts/#Protofo" Grid.Column="2" Grid.Row="10" Grid.RowSpan="5" HorizontalAlignment="Left" Width="550"/>
                </Grid>
            </StackPanel>

            <objs:FA_BTN Style="{StaticResource FA_BTN}" Content="Copy to Clipboard" TextMargin="10,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="Copy" IconDirection="Right" IconMargin="0,0,10,00" IconColor="#EEEEEE" Grid.Row="0" Grid.Column="3" Click="CopytoClipboard" Width="180"/>
            <TextBlock Text="¹ It is best to install DirectX 9.0c using the web installer, as it includes all the necessary libraries." Foreground="#FF8744" FontSize="12" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4" Margin="10,0,0,0"/>
            <TextBlock Text="² TDU2 requires the C++ Runtime 2005/2008 for 32-bit systems." Foreground="#FF8744" FontSize="12" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4" Margin="10,18,0,0"/>
            <TextBlock Text="³ The NAT type is only an approximate indicator of your connection. It is not critical for the online service, but it mainly reflects how reachable you are for other players" Foreground="#FF8744" FontSize="12" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4" Margin="10,36,0,0"/>
            <TextBlock Text="©2022 - 2025 Project-Paradise 2" Foreground="Wheat" FontSize="12" Grid.Row="6" Grid.Column="3" Margin="25,54,0,0"/>
        </Grid>
    </Border>
</UserControl>

<UserControl x:Class="ProjectParadise2.Views.LauncherUpdate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectParadise2.Views"
             xmlns:objs="clr-namespace:ProjectParadise2.Objects"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1020">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1020"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="600"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Border BorderThickness="0.8" CornerRadius="15" Background="#20232B" BorderBrush="#393E46" Margin="20,20,20,20">
            <StackPanel>
                <AccessText TextWrapping="WrapWithOverflow" x:Name="ChangeLog" x:FieldModifier="public" Foreground="#F1F1F1" FontSize="18" Margin="10"/>
            </StackPanel>
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
        </Border>
        <Border Grid.Row="1" Margin="20,10,20,10" BorderThickness="0.8" CornerRadius="15" Background="#20232B" BorderBrush="#393E46">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions> 
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="550"/>
                    <ColumnDefinition Width="409"/>
                </Grid.ColumnDefinitions>

                <!-- Download Progressbar -->
                <ProgressBar Width="959" Height="30" VerticalAlignment="Center" Background="Transparent" Foreground="#3BB273" Name="Progress" Minimum="0" Maximum="100" Value="100" BorderBrush="Transparent" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"/>
                <TextBlock Text="{Binding ElementName=Progress, Path=Value, StringFormat={}{0:0}% }" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="0,0,0,0" Foreground="#B8B8B8" FontSize="14" FontFamily="/Fonts/#Protofo" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Name="ProgressText"/>
                <!-- Launcher Version and Buttons-->
                <Label Foreground="#B8B8B8" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Top" Name="Version" Content="Local 1.0.0 Online 3.0.1" Margin="10,9,0,0" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="2" Width="600" Grid.Row="2"/>
                <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="-129,0,0,0" Content="Skip" Height="40" Width="110" TextMargin="35,0,0,0" Foreground="#F1F1F1" FontSize="18" IsChecked="False" Icon="Pause" IconDirection="Center" IconMargin="-70,0,0,0" IconColor="#F1F1F1" Grid.Column="2" Grid.Row="2" Click="SkipUpdate" x:Name="SkippBTN" />
                <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="129,0,0,0" Content="Update" Height="40" Width="110" TextMargin="35,0,0,0" Foreground="#F1F1F1" FontSize="18" IsChecked="False" Icon="Play" IconDirection="Center" IconMargin="-70,0,0,0" IconColor="#F1F1F1" Grid.Column="2" Grid.Row="2" Click="RunUpdate" x:Name="UpdateBTN"/>

            </Grid>
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
        </Border>
    </Grid>
</UserControl>

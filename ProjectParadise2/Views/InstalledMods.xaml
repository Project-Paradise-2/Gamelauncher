<UserControl x:Class="ProjectParadise2.Views.InstalledMods"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectParadise2.Views"
             xmlns:objs="clr-namespace:ProjectParadise2.Objects"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1020">
    <Border BorderThickness="0.8" CornerRadius="15" Background="#20232B" BorderBrush="#393E46" Margin="20,20,20,20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="152*"/>
            <ColumnDefinition Width="196*"/>
            <ColumnDefinition Width="241*"/>
            <ColumnDefinition Width="157*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Static Elements -->
        <objs:FA_BTN Style="{StaticResource FA_BTN}" x:Name="BackBtn" Margin="5,0,0,0" Content="Back" Height="40" Width="180" TextMargin="35,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="ArrowLeft" IconDirection="Center" IconMargin="-145,0,0,0" IconColor="#EEEEEE" Grid.Column="3" Click="BackToMods"/>


        <!-- Database Filled Mods -->
        <TextBlock Text="Loading Mod infos from database..." FontSize="20" Foreground="#B4A5A5" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Name="InstalledMod1" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="4" Width="871" Margin="17,0,0,0"/>
        <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="90,-5,0,0" Content="" Height="30" Width="80" TextMargin="35,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="TrashOutline" IconDirection="Center" IconMargin="0,0,0,0" IconColor="#EEEEEE" Grid.Column="4" Grid.Row="1"  Tag="0" Click="DeleteMod_Click" x:Name="InstalledMod1Delete" />

        <TextBlock Text="Loading Mod infos from database..." FontSize="20" Foreground="#B4A5A5" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Name="InstalledMod2" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="4" Width="871" Margin="17,0,0,0"/>
        <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="90,-5,0,0" Content="" Height="30" Width="80" TextMargin="35,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="TrashOutline" IconDirection="Center" IconMargin="0,0,0,0" IconColor="#EEEEEE" Grid.Column="4" Grid.Row="2"  Tag="1" Click="DeleteMod_Click" x:Name="InstalledMod2Delete"/>

        <TextBlock Text="Loading Mod infos from database..." FontSize="20" Foreground="#B4A5A5" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Name="InstalledMod3" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="4" Width="871" Margin="17,0,0,0"/>
        <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="90,-5,0,0" Content="" Height="30" Width="80" TextMargin="35,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="TrashOutline" IconDirection="Center" IconMargin="0,0,0,0" IconColor="#EEEEEE" Grid.Column="4" Grid.Row="3"  Tag="2" Click="DeleteMod_Click" x:Name="InstalledMod3Delete"/>

        <TextBlock Text="Loading Mod infos from database..." FontSize="20" Foreground="#B4A5A5" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" Name="InstalledMod4" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="4" Width="871" Margin="17,0,0,0"/>
        <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="90,-5,0,0" Content="" Height="30" Width="80" TextMargin="35,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="TrashOutline" IconDirection="Center" IconMargin="0,0,0,0" IconColor="#EEEEEE" Grid.Column="4" Grid.Row="4"  Tag="3" Click="DeleteMod_Click" x:Name="InstalledMod4Delete"/>

        <TextBlock Text="Loading Mod infos from database..." FontSize="20" Foreground="#B4A5A5" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center" Name="InstalledMod5" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="4" Width="871" Margin="17,0,0,0"/>
        <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="90,-5,0,0" Content="" Height="30" Width="80" TextMargin="35,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="TrashOutline" IconDirection="Center" IconMargin="0,0,0,0" IconColor="#EEEEEE" Grid.Column="4" Grid.Row="5"  Tag="4" Click="DeleteMod_Click" x:Name="InstalledMod5Delete"/>

        <TextBlock Text="Loading Mod infos from database..." FontSize="20" Foreground="#B4A5A5" Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Center" Name="InstalledMod6" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="4" Width="871" Margin="17,0,0,0"/>
        <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="90,-5,0,0" Content="" Height="30" Width="80" TextMargin="35,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="TrashOutline" IconDirection="Center" IconMargin="0,0,0,0" IconColor="#EEEEEE" Grid.Column="4" Grid.Row="6"  Tag="5" Click="DeleteMod_Click" x:Name="InstalledMod6Delete"/>

        <TextBlock Text="Loading Mod infos from database..." FontSize="20" Foreground="#B4A5A5" Grid.Row="7" HorizontalAlignment="Left" VerticalAlignment="Center" Name="InstalledMod7" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="4" Width="871" Margin="17,0,0,0"/>
        <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="90,-5,0,0" Content="" Height="30" Width="80" TextMargin="35,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="TrashOutline" IconDirection="Center" IconMargin="0,0,0,0" IconColor="#EEEEEE" Grid.Column="4" Grid.Row="7"  Tag="6" Click="DeleteMod_Click" x:Name="InstalledMod7Delete"/>

        <TextBlock Text="Loading Mod infos from database..." FontSize="20" Foreground="#B4A5A5" Grid.Row="8" HorizontalAlignment="Left" VerticalAlignment="Center" Name="InstalledMod8" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="4" Width="871" Margin="17,0,0,0"/>
            <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="90,-5,0,0" Content="" Height="30" Width="80" TextMargin="35,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="TrashOutline" IconDirection="Center" IconMargin="0,0,0,0" IconColor="#EEEEEE" Grid.Column="4" Grid.Row="8"  Tag="7" Click="DeleteMod_Click" x:Name="InstalledMod8Delete"/>

        <!-- Static Elements -->
        <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="-90,-5,0,0" Content="" Height="30" Width="80" TextMargin="35,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="LongArrowLeft" IconDirection="Center" IconMargin="-10,0,0,0" IconColor="#EEEEEE" Grid.Column="0" Grid.Row="9" Click="PageLast" x:Name="LastPageBTN"/>
        <TextBlock Text=" -1/10- " FontSize="20" Foreground="#B4A5A5" Grid.Column="1" Grid.Row="9" HorizontalAlignment="Center" VerticalAlignment="Center" Name="PageList" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="2" Width="81" Margin="-30,0,0,0"/>
        <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="90,-5,0,0" Content="" Height="30" Width="80" TextMargin="35,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="LongArrowRight" IconDirection="Center" IconMargin="10,0,0,0" IconColor="#EEEEEE" Grid.Column="4" Grid.Row="9" Click="PageNext" x:Name="NextPageBTN"/>
        </Grid>
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>
    </Border>
</UserControl>

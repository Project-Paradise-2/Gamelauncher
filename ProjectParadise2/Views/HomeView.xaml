<UserControl x:Class="ProjectParadise2.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectParadise2.Views"
             xmlns:objs="clr-namespace:ProjectParadise2.Objects"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1020">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1020"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="640"/>
            <RowDefinition Height="76"/>
        </Grid.RowDefinitions>
        <Border BorderThickness="0.8" CornerRadius="15" Background="#20232B" BorderBrush="#393E46" Margin="20,20,20,20">
            <StackPanel>
                <StackPanel DockPanel.Dock="Top" Height="60" >
                    <TextBlock Text="" 
                               FontSize="22" 
                               Foreground="#27F5E0" 
                               Margin="20,15,0,0" 
                               FontFamily="/Fonts/#Protofo"
                               x:Name="NewsTitle" Height="29"/>
                </StackPanel>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="15,0,20,40" Height="500" Width="950">
                    <TextBlock Text="" 
                               Foreground="Wheat" 
                               FontSize="16" 
                               FontFamily="/Fonts/#Protofo" 
                               TextWrapping="Wrap"
                               x:Name="NewsText" Height="500" Width="950"/>
                </ScrollViewer>
                <!-- Navigation Buttons -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="0,-50,0,0" x:Name="NavPanel" Height="47">
                    <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="10,-10,0,0" Content="" Height="40" Width="50" TextMargin="40,0,0,0" Foreground="#EEEEEE" FontSize="18" IsChecked="False" Icon="ArrowLeft" IconDirection="Center" IconMargin="0,0,0,0" IconColor="#F1F1F1" Grid.Column="2" Grid.Row="2" Click="PrevNews" />
                    <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="860,-10,0,0" Content="" Height="40" Width="50" TextMargin="40,0,0,0" Foreground="#EEEEEE" FontSize="18" IsChecked="False" Icon="ArrowRight" IconDirection="Center" IconMargin="0,0,0,0" IconColor="#F1F1F1" Grid.Column="2" Grid.Row="2" Click="NextNews" />
                </StackPanel>
            </StackPanel>
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
        </Border>
        <Border Grid.Row="1" Margin="20,10,20,10" BorderThickness="0.8" CornerRadius="15" Background="#20232B" BorderBrush="#393E46">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="550"/>
                    <ColumnDefinition Width="409"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="ServerStateLamp" Width="25" Height="25" Background="Yellow" CornerRadius="90" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="10,0,0,0"/>
                <Label Foreground="#F1F1F1" FontSize="22" HorizontalAlignment="Left" VerticalAlignment="Center" Content="Checking Status" Grid.Column="1" Margin="45,0,0,0" x:Name="ServerStateText" MouseLeftButtonDown="RefreshState" FontFamily="/Fonts/#Protofo" Height="41" Width="495"/>
                <ComboBox Style="{StaticResource DropDown}" Grid.Column="2" FontSize="15" SelectionChanged="DefineProfile" Name="GameProfiles" Margin="0,0,110,0" />
                <objs:FA_BTN Style="{StaticResource FA_BTN}" x:Name="Playbutton" Margin="280,0,0,0" Content="Play" Height="40" Width="100" TextMargin="40,0,0,0" Foreground="#EEEEEE" FontSize="18" IsChecked="False" Icon="PlayCircleOutline" IconDirection="Center" IconMargin="-60,0,0,0" IconColor="#F1F1F1" Grid.Column="2" Grid.Row="2" Click="StartGame"/>
            </Grid>
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
        </Border>
    </Grid>
</UserControl>
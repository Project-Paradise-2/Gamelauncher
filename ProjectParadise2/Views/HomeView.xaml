<UserControl x:Class="ProjectParadise2.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectParadise2.Views"
             xmlns:objs="clr-namespace:ProjectParadise2.Objects"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1000"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="550"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Border Width="950" Height="500" Margin="5,10,0,0" BorderThickness="0.8" CornerRadius="15" Background="#222831" BorderBrush="#393E46">
            <StackPanel>
                <Label Foreground="#EEEEEE" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center" Name="LastNews" Content="LAST NEWS" Margin="20,5,0,0" FontFamily="/Fonts/#Protofo"/>
                <Label HorizontalAlignment="Center"
                               Foreground="#EEEEEE"
                               FontSize="18"
                               FontFamily="/Fonts/#Protofo"
                               Margin="0,10,0,0" Height="430" Width="905"
                               x:Name="NewsBox">
                    <AccessText TextWrapping="WrapWithOverflow" x:Name="NewsMessage" x:FieldModifier="public">
                    </AccessText>
                </Label>
            </StackPanel>
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
        </Border>
        <Border Width="950" Height="50" Grid.Row="2" Grid.Column="1" Margin="5,15,0,0" BorderThickness="0.8" CornerRadius="15" Background="#222831" BorderBrush="#393E46">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="600"/>
                    <ColumnDefinition Width="330"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="ServerStateLamp" Width="25" Height="25" Background="Yellow" CornerRadius="90" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" Margin="10,0,0,0">
                </Border>
                <Label Foreground="#EEEEEE" FontSize="22" HorizontalAlignment="Left" VerticalAlignment="Center" Content="Checking Status" Grid.Column="1" Grid.Row="0" Margin="45,0,0,0" x:Name="ServerStateText" MouseLeftButtonDown="RefreshState" FontFamily="/Fonts/#Protofo"/>


                <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="129,0,0,0" Content="STARTGAME NOW" Height="40" Width="200" TextMargin="40,0,0,0" Foreground="#EEEEEE" FontSize="18" IsChecked="False" Icon="PlayCircleOutline" IconDirection="Center" IconMargin="-150,0,0,0" IconColor="#EEEEEE" Grid.Column="2" Grid.Row="2" Click="StartGame" x:Name="RunGameButton"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>

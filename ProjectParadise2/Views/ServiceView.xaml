<UserControl x:Class="ProjectParadise2.Views.ServiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectParadise2.Views"
             xmlns:objs="clr-namespace:ProjectParadise2.Objects"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="1000">
    <Border BorderThickness="0.8" CornerRadius="15" Background="#20232B" BorderBrush="#393E46" Margin="20,20,20,20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="207*"/>
                <ColumnDefinition Width="221*"/>
                <ColumnDefinition Width="373*"/>
                <ColumnDefinition Width="199*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!-- Static Elements -->
            <TextBlock Text="Project Paradise 2: Cloud Savegame" FontSize="20" Foreground="#B4A5A5" HorizontalAlignment="Left" VerticalAlignment="Center" Name="CloudInfo" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="4" Width="871" Margin="17,0,0,0" Height="29"/>
            <TextBlock Text="Login Data" FontSize="20" Foreground="#B4A5A5" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Name="LoginText" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="4" Width="871" Margin="17,0,0,0" Height="29"/>
            <!-- User Input -->
            <TextBlock Text="Account Name" FontSize="20" Foreground="#B4A5A5" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Name="AccountText" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="4" Width="871" Margin="17,0,0,0" Height="29"/>
            <TextBox Width="250" Height="40" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="2" Name="Accountname" Style="{StaticResource Input}" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="3" Margin="182,0,0,0" TextChanged="UsernameInputChanged"/>
            <TextBlock Text="Account Password" FontSize="20" Foreground="#B4A5A5" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Name="PasswordText" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="4" Width="871" Margin="17,0,0,0" Height="29"/>
            <TextBox Width="250" Height="40" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="3" Name="Accountpassword" Style="{StaticResource Input}" FontFamily="/Fonts/#Protofo" Grid.ColumnSpan="3" Margin="182,0,0,0" TextChanged="PasswordInputChanged"/>
            <!-- User Options -->
            <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="27,12,27,13" Content="Login" TextMargin="40,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="SignIn" IconDirection="Center" IconMargin="-110,0,0,0" IconColor="#EEEEEE" Grid.Column="0" Grid.Row="4" x:Name="LoginBtn" Click="CloudLogin" />
            <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="32,13,32,12" Content="Logout" TextMargin="40,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="SignIn" IconDirection="Center" IconMargin="-110,0,0,0" IconColor="#EEEEEE" Grid.Column="1" Grid.Row="1" x:Name="LogoutBtn" Click="CloudLogout" />
            <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="36,15,157,15" Content="Refresh Info" TextMargin="40,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="Refresh" IconDirection="Center" IconMargin="-125,0,0,0" IconColor="#EEEEEE" Grid.Column="2" Grid.Row="1" x:Name="Refresh" Click="RefreshCloud" />
            <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="32,12,32,13" Content="Upload" TextMargin="40,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="Upload" IconDirection="Center" IconMargin="-110,0,0,0" IconColor="#EEEEEE" Grid.Column="1" Grid.Row="2" x:Name="CloudUpload" Click="OnCloudupload" />
            <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="32,13,32,12" Content="Download" TextMargin="40,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="Download" IconDirection="Center" IconMargin="-110,0,0,0" IconColor="#EEEEEE" Grid.Column="1" Grid.Row="3" x:Name="CloudDownload" Click="OnClouddownload" />
            <!-- Savegame Data -->
            <TextBlock Text="Savegame Info:" FontSize="20" Foreground="#B4A5A5" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Name="SaveInfoText" FontFamily="/Fonts/#Protofo" Width="199" Margin="17,0,0,0" Height="29"/>
            <TextBlock Text="" FontSize="20" Foreground="#B4A5A5" Grid.Row="2" Grid.RowSpan="4" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" Name="Savegamedata" FontFamily="/Fonts/#Protofo" Width="532" Margin="20,58,0,0" Height="160" Grid.ColumnSpan="2"/>
            <!-- Local Savegame Funktion -->
            <TextBlock Text="Local Savegame Backup" FontSize="20" Foreground="#B4A5A5" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="/Fonts/#Protofo" Grid.Row="6" Grid.ColumnSpan="4" Width="871" Margin="17,0,0,0" Height="29"/>
            <CheckBox Style="{StaticResource Toggle}" HorizontalAlignment="Center" VerticalAlignment="Center" Name="DiscordToggle" Grid.Row="6" Grid.Column="1" Click="OnLocalbackup" Height="35" Width="66"/>
            <TextBlock Text="Backup:" Foreground="#B4A5A5" FontSize="18" Margin="80,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" FontFamily="/Fonts/#Protofo" Height="25" Width="64" Name="BackupTypeText"/>
            <ComboBox Style="{StaticResource DropDown}" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" FontSize="15" Name="BackupType" VerticalAlignment="Center" Margin="-130,0,91,0" SelectionChanged="BackupTypeChanged" Height="40" Width="260">
                <ComboBoxItem>On Gamestart</ComboBoxItem>
                <ComboBoxItem>On Gameclose</ComboBoxItem>
            </ComboBox>
            <TextBlock Text="Savepoints" FontSize="20" Foreground="#B4A5A5" Grid.Row="7" Grid.Column="2" HorizontalAlignment="Left" TextAlignment="Right" VerticalAlignment="Center" Name="MaximalSavesText" FontFamily="/Fonts/#Protofo" Width="262" Margin="54,0,0,0" Height="29"/>
            <TextBox Width="250" Height="40" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="4" Name="MaximalSaves" Style="{StaticResource Input}" FontFamily="/Fonts/#Protofo" Margin="40,0,0,0" TextChanged="SavePointsEdit"/>
            <objs:FA_BTN Style="{StaticResource FA_BTN}" Margin="-30,10,15,10"  Content="Open Backup Folder" TextMargin="40,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="FolderOpen" IconDirection="Center" IconMargin="-210,0,0,0" IconColor="#EEEEEE" Grid.Column="2" Grid.Row="6" x:Name="OpenBackupFolder" Click="OnOpenbackFolder" Width="250" />
            <objs:FA_BTN Style="{StaticResource FA_BTN}" x:Name="xOpenSavefolder" Margin="-45,10,15,10" Content="Open Savefolder" TextMargin="10,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="File" IconDirection="Right" IconMargin="0,0,10,00" IconColor="#EEEEEE" Grid.Row="6" Grid.Column="3" Click="OpenSavefolder" Width="200"/>
            <TextBlock Text="Uploading..." FontSize="20" Foreground="#B4A5A5" HorizontalAlignment="Left" VerticalAlignment="Center" Name="Uploadstate" FontFamily="/Fonts/#Protofo" Grid.Column="2" Grid.ColumnSpan="2" Margin="17,0,0,0" Height="29" Width="535"/>
        </Grid>
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>
    </Border>
</UserControl>

<UserControl    x:Class="ProjectParadise2.Views.SettingsView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:local="clr-namespace:ProjectParadise2.Views"
                xmlns:objs="clr-namespace:ProjectParadise2.Objects"
                mc:Ignorable="d"
                d:DesignHeight="650" d:DesignWidth="1000">
    <Border Margin="5,10,0,0" BorderThickness="0.8" CornerRadius="20" Background="#222831" BorderBrush="#393E46">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="26"/>
                <RowDefinition Height="94"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="210"/>
                <ColumnDefinition Width="137"/>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="287"/>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Onlinemode:" Foreground="#EEEEEE" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" FontFamily="/Fonts/#Protofo" x:Name="OnlineTxt" Height="26" Width="190"/>
            <CheckBox Style="{StaticResource Toggle}" HorizontalAlignment="Center" VerticalAlignment="Center" Name="OnlineToggle" Grid.Row="1" Grid.Column="1" Click="OnOnlineModeupdate" Height="36" Width="75"/>

            <TextBlock Text="Discord RPC:" Foreground="#EEEEEE" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" FontFamily="/Fonts/#Protofo" x:Name="DiscordTxt" Height="26" Width="190"/>
            <CheckBox Style="{StaticResource Toggle}" HorizontalAlignment="Center" VerticalAlignment="Center" Name="DiscordToggle" Grid.Row="2" Grid.Column="1" Click="OnDiscordUpdate" Height="36" Width="75"/>


            <TextBlock Text="Update Check:" Foreground="#EEEEEE" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3" FontFamily="/Fonts/#Protofo" x:Name="UpdateTxt" Height="26" Width="190"/>
            <CheckBox Style="{StaticResource Toggle}" HorizontalAlignment="Center" VerticalAlignment="Center" Name="UpdateToggle" Grid.Row="3" Grid.Column="1" Click="OnUpdateupdate" Height="36" Width="75"/>

            <TextBlock Text="UPnP:" Foreground="#EEEEEE" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="4" FontFamily="/Fonts/#Protofo" Height="26" Width="190"/>
            <CheckBox Style="{StaticResource Toggle}" HorizontalAlignment="Center" VerticalAlignment="Center" Name="UPNPToggle" Grid.Row="4" Grid.Column="1" Click="OnUpnpupdate" Height="36" Width="75"/>

            
            <objs:FA_BTN Style="{StaticResource FA_BTN}" x:Name="GameSelect"  Margin="15,5,15,10" Content="Select Game" TextMargin="10,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="ExternalLink" IconDirection="Right" IconMargin="0,0,10,00" IconColor="#EEEEEE" Grid.Row="1" Grid.Column="3" Click="OnGameSelect" Height="35"/>
            <objs:FA_BTN Style="{StaticResource FA_BTN}" x:Name="GameUpdate" Margin="15,5,15,10" Content="Game Update" TextMargin="10,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="Check" IconDirection="Right" IconMargin="0,0,10,00" IconColor="#EEEEEE" Grid.Row="1" Grid.Column="4" Click="OnGameUpdate" Height="35"/>
            <TextBlock Text="*(Should only be used if the launcher says so!)" Foreground="DarkRed" FontSize="14" Margin="15,0,0,0" VerticalAlignment="Top" Grid.Row="3" Grid.Column="3" Name="WarningTxt" Grid.ColumnSpan="3" Height="36" FontWeight="Bold" HorizontalAlignment="Left" Width="622"/>
            <objs:FA_BTN Style="{StaticResource FA_BTN}" x:Name="SetConnection" Margin="15,5,15,10" Content="Set Connection" TextMargin="10,0,0,0" Foreground="#EEEEEE" FontSize="15" IsChecked="False" Icon="Link" IconDirection="Right" IconMargin="0,0,10,00" IconColor="#EEEEEE" Grid.Row="2" Grid.Column="3" Click="OnConnectionSet" Height="35"/>

            <TextBlock Text="Launcher Lang:" Foreground="#EEEEEE" FontSize="18" Margin="49,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="5" Grid.Column="3" FontFamily="/Fonts/#Protofo" x:Name="LangTxt" Height="26" Width="231"/>
            <ComboBox Style="{StaticResource DropDown}" Grid.Row="5" Grid.Column="4" FontSize="15" Name="LauncherLang" SelectionChanged="SetLang">
                <ComboBoxItem>German</ComboBoxItem>
                <ComboBoxItem>English (US)</ComboBoxItem>
                <ComboBoxItem>Czech</ComboBoxItem>
                <ComboBoxItem>Spanish</ComboBoxItem>
                <ComboBoxItem>French</ComboBoxItem>
                <ComboBoxItem>Indonesian</ComboBoxItem>
                <ComboBoxItem>Italian</ComboBoxItem>
                <ComboBoxItem>Lithuanian</ComboBoxItem>
                <ComboBoxItem>Polish</ComboBoxItem>
                <ComboBoxItem>Russian</ComboBoxItem>
                <ComboBoxItem>Portuguese (Brazil)</ComboBoxItem>
                <ComboBoxItem>English (UK)</ComboBoxItem>
                <ComboBoxItem>Dutch</ComboBoxItem>
                <ComboBoxItem>Romanian</ComboBoxItem>
                <ComboBoxItem>Turkish</ComboBoxItem>
                <ComboBoxItem>Chinese</ComboBoxItem>
                <ComboBoxItem>Debug</ComboBoxItem>
            </ComboBox>

            <TextBlock Text="Audio Mode:" Foreground="#EEEEEE" FontSize="18" Margin="49,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="6" Grid.Column="3" FontFamily="/Fonts/#Protofo" x:Name="AudioTxt" Height="26" Width="231"/>
            <ComboBox Style="{StaticResource DropDown}" Grid.Row="6" Grid.Column="4" FontSize="15" Name="Audiomode" SelectionChanged="UpdateAudio">
                <ComboBoxItem>Direct</ComboBoxItem>
                <ComboBoxItem>XAudio2</ComboBoxItem>
            </ComboBox>

            <TextBlock Text="" Foreground="#EEEEEE" FontSize="12" Margin="27,0,0,0" VerticalAlignment="Top" Grid.Row="12" Grid.Column="0" Name="GameInfo" FontFamily="/Fonts/#Protofo" Height="26" Grid.ColumnSpan="5"/>
            <TextBlock Text="" Foreground="#EEEEEE" FontSize="12" Margin="27,15,0,0" VerticalAlignment="Top" Grid.Row="12" Grid.Column="0" Name="GameInfo1" FontFamily="/Fonts/#Protofo" Height="26" Grid.ColumnSpan="5"/>
            <TextBlock Text="" Foreground="#EEEEEE" FontSize="12" Margin="27,30,0,0" VerticalAlignment="Top" Grid.Row="12" Grid.Column="0" Name="GameInfo2" FontFamily="/Fonts/#Protofo" Height="26" Grid.ColumnSpan="5"/>
            <TextBlock Text="" Foreground="#EEEEEE" FontSize="12" Margin="27,45,0,0" VerticalAlignment="Top" Grid.Row="12" Name="GameInfo3" FontFamily="/Fonts/#Protofo" Height="26" Grid.ColumnSpan="5"/>

            <TextBlock Text="Magic Ram:" Foreground="#EEEEEE" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="6" FontFamily="/Fonts/#Protofo"  Height="26" Width="190"/>
            <CheckBox Style="{StaticResource Toggle}" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="MagicRam" Grid.Row="6" Grid.Column="1" Click="OnRamUpdate" Height="36" Width="75"/>

            <TextBlock Text="Magic Cores:" Foreground="#EEEEEE" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="7"  FontFamily="/Fonts/#Protofo"  Height="26" Width="190"/>
            <CheckBox Style="{StaticResource Toggle}" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="Cores" Grid.Row="7" Grid.Column="1" Click="OnCoreUpdate" Height="36" Width="75" />

            <TextBlock Text="Magic Prio:" Foreground="#EEEEEE" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="8"  FontFamily="/Fonts/#Protofo"  Height="26" Width="190"/>
            <CheckBox Style="{StaticResource Toggle}" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="Prio" Grid.Row="8" Grid.Column="1" Click="OnPrioUpdate" Height="36" Width="75" />


            <TextBlock Text="Vehicle Dirt:" Foreground="#EEEEEE" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="8" Grid.Column="3" FontFamily="/Fonts/#Protofo"  Height="26" Width="190"/>
            <CheckBox Style="{StaticResource Toggle}" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="DirtEnabled" Grid.Row="8" Grid.Column="3" Click="OnDirtUpdate" Height="36" Width="80" Margin="0,0,-180,0"/>


            <TextBlock Text="Vehicle Damage:" Foreground="#EEEEEE" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="8" Grid.Column="4" FontFamily="/Fonts/#Protofo"  Height="26" Width="190"/>
            <CheckBox Style="{StaticResource Toggle}" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="DamageEnabled" Grid.Row="8" Grid.Column="4" Click="OnDamageUpdate" Height="36" Width="80" Margin="0,0,-180,0"/>
        </Grid>
    </Border>
</UserControl>
